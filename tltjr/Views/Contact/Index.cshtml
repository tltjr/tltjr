<div class="container">
    <div class="row down160">
        <div class="span8">
            <div class="title-divider">
                <h3>Contact Me</h3>
                <div class="divider-arrow"></div>
            </div>
            <form id="contact-form" action="@Url.Action("Send")" method="post">
                <fieldset>
                    <legend></legend>
                    <label>Name</label>
                    <input name="name" type="text" class="required" />
                    <label>Email</label>
                    <input name="email" type="email" class="required email" />
                    <label>Subject</label>
                    <input name="subject" type="text" class="required" />
                    <label>Message</label>
                    <textarea name="message" class="required"></textarea>
                    <div class="form-actions">
                        <button type="submit" class="btn btn-large btn-primary">Send</button>
                    </div>
                </fieldset>
            </form>
        </div>
        <div class="span4" id="alt-contact">
            <div class="title-divider">
                <h3>Alternate Contact Info</h3>
                <div class="divider-arrow"></div>
            </div>
            <p><strong>Twitter: </strong>@@tltjr</p>
            <p><strong>Phone: </strong>480-286-9845</p>
        </div>
    </div>
</div>

@Scripts.Render("~/bundles/jqueryval");
<script type="text/javascript">
    $("#nav-contact").addClass("active");
    $("#contact-form").validate();
</script>