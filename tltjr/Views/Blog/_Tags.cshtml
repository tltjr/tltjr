@model IEnumerable<string>

@if (Model != null)
{
    @Html.Raw("Tags: ")
    var tags = Model.ToArray();
    for (var i = 0; i < tags.Length; i++)
    {
        var tag = tags[i];
        @Html.ActionLink(tag, "Tag", new { tag })
        if (i < tags.Length - 1)
        {
            @Html.Raw(", ")
        }
    }
}