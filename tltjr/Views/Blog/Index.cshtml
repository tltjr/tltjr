@model tltjr.Models.IndexModel

<!-- container -->
<section id="container">
    @if (User.Identity.IsAuthenticated) {
        <div id="admin-actions">
            @Html.ActionLink("New Post", "New", "Blog", new { @class = "admin-link" })
            @Html.ActionLink("Log Off", "LogOff", "Account", new { @class = "admin-link" })
        </div>
    }
    <div class="container">
        <div class="row down160">
            <!-- page content -->
            @Html.Partial("_Summaries", Model.Posts)
            @Html.Partial("_Sidebar", Model.SidebarModel)
        </div>
    </div>
</section>

<script type="text/javascript">
    $("#nav-blog").addClass("active");
</script>